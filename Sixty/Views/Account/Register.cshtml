@model Sixty.ViewModels.RegistrationViewModel
@using Sixty.Helpers

@{
    ViewBag.Title = "Регистрация";
}
<div class="col-md-6 col-md-offset-3">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "full-width" } })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "full-width" } })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PasswordRetype, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.EditorFor(m => m.PasswordRetype, new { htmlAttributes = new { @class = "full-width" } })
            @Html.ValidationMessageFor(m => m.PasswordRetype)
        </div>
    </div>
    <button type="submit" class="btn btn-default">@TR.T("Зарегистрироваться")</button>
    @Html.ActionLink("Восстановить пароль", "Restore", "Account")
}
</div>
