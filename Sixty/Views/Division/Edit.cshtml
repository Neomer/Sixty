@using Sixty.Helpers
@model Sixty.ViewModels.DivisionCreationViewModel

<div class="portlet">
    @using (Html.BeginForm("Edit", "Division", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.IsNew)
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "full-width" } })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AvailableForNewbee, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EditorFor(m => m.AvailableForNewbee)
                @Html.ValidationMessageFor(m => m.AvailableForNewbee)
            </div>
        </div>
        <div class="form-group center">
            @Html.ValidationMessageFor(m => m.Error)
        </div>
        <button type="submit" class="btn btn-primary">@TR.T("Сохранить")</button>
        @Html.ActionLink(TR.T("Назад"), "Index", "Division")
    }
</div>