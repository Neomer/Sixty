@model Sixty.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "Профиль пользователя";
}

@using (Html.BeginForm("Index", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.EditorFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <button type="submit" class="btn btn-default">Сохранить изменения</button>
}
